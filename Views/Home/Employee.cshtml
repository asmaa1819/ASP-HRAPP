@model Employee
<html>
<head>
    <title> </title>
    <style>
        .input-validation-error{
            border :1px solid darkred;
            background-color:affcccb;
        } 
        .validation-summary-errors{
            color:red;
            font-weight:bolder

        }
    </style>
</head>
<body>
    <form asp-action="Employee" method="post">
        <h1>hello Employee</h1>
        <div asp-validation-summary="All"></div>
        <div class="form-group">
            <label asp-for="Ename">Employee Name</label>
            <input asp-for="Ename" class="form-control form-control-sm" placeholder="Enter U Defult Name "/>
        </div>

        <div class="form-group">
            <label asp-for="Edepartment">department</label>
            <select asp-for="Edepartment" class="form-control form-control-sm">
                <option></option>
                <option value="Operation">Operation</option>
                <option value="IT">Information Tech</option>
                <option value="Finance">Finance</option>

            </select>
        </div>

        <div class="form-check">
            <label asp-for="IsActive" class="form-check-label">is Active</label>
            <input class="form-check-input" type="checkbox" asp-for="IsActive"  />
        </div>
        <div class="form-group">
            <label asp-for="BirthDay">Bithday</label>
            <input type="date" asp-for="BirthDay" class="form-control form-control-sm" />
        </div>
        <div class="form-group">
            <label asp-for="JobTitle">Job Title</label>
            <input asp-for="JobTitle" class="form-control form-control-sm" />
        </div>
        <div class="form-group">
            <label asp-for="Email">Email</label>
            <input type="email" asp-for="Email" class="form-control form-control-sm" />
        </div>
        

        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</body>
</html>
